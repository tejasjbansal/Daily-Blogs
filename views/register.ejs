  <link rel="stylesheet" href="/css/styles.css">
  <link rel="icon" href="/images/cropped-favicon.png">
  <nav class="navbar navbar-default">
    <div class="container">
      <div class="navbar-header">
        <p class="navbar-brand">DAILY BLOGS</p>
      </div>
